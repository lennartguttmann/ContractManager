{
  "name": "PHP Development Environment",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/ContractManager",
  
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "aaron-bond.better-comments",
        "github.copilot",
        "github.copilot-chat",
        "bradlc.vscode-tailwindcss",
        "xdebug.php-debug",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "php.validate.executablePath": "/usr/local/bin/php",
        "intelephense.environment.phpVersion": "8.3.0",
        "editor.formatOnSave": true,
        "php.suggest.basic": false,
        "[php]": {
          "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
        }
      }
    }
  },

  "forwardPorts": [8000, 8080, 8081, 3306, 9003],

  "portsAttributes": {
    "8000": {
      "label": "PHP Built-in Server",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Live Server",
      "onAutoForward": "notify"
    },
    "8081": {
      "label": "phpMyAdmin",
      "onAutoForward": "openBrowser"
    },
    "3306": {
      "label": "MySQL",
      "onAutoForward": "silent"
    },
    "9003": {
      "label": "Xdebug",
      "onAutoForward": "silent"
    }
  },

  "postCreateCommand": "npm install -g live-server tailwindcss && composer install",

  "remoteUser": "root"
}
