{\n  "name": "PHP MySQL Development",\n  "image": "mcr.microsoft.com/devcontainers/php:1-8.2-bullseye",\n  "features": {\n    "ghcr.io/devcontainers/features/node:1": {\n      "version": "lts"\n    },\n    "ghcr.io/devcontainers/features/mysql:1": {\n      "version": "8.0"\n    }\n  },\n  "customizations": {\n    "vscode": {\n      "extensions": [\n        "bmewburn.vscode-intelephense-client",\n        "bradlc.vscode-tailwindcss",\n        "mtxr.sqltools",\n        "mtxr.sqltools-driver-mysql"\n      ],\n      "settings": {\n        "php.validate.executablePath": "/usr/local/bin/php",\n        "editor.formatOnSave": true\n      }\n    }\n  },\n  "forwardPorts": [8000, 3306],\n  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y php8.2-mysql php8.2-pdo php8.2-mbstring && sudo service mysql start && mysql -u root -proot -e 'CREATE DATABASE IF NOT EXISTS contractmanager;'",\n  "postStartCommand": "sudo service mysql start",\n  "remoteUser": "vscode"\n}